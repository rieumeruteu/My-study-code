//연습문제 8
import turtle
t=turtle.Turtle()
t.shape("turtle")
t.fd(100)
t.up()
t.goto(0,100)
t.down()
t.fd(100)

//연습문제 9
import turtle
t=turtle.Turtle()
t.shape("turtle")
t.circle(100)
t.up()
t.goto(190,0)
t.down()
t.circle(100)

t.up()
t.goto(380,0)
t.down()
t.circle(100)

t.up()
t.goto(100,-130)
t.down()
t.circle(100)

t.up()
t.goto(300,-130)
t.down()
t.circle(100)

