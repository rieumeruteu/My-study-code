//연습문제 4
import turtle
t=turtle.Turtle()
t.shape("turtle")
t.fd(100)
t.lt(90)
t.fd(100)
t.rt(90)
t.fd(100)
t.rt(90)
t.fd(100)
t.lt(90)
t.fd(100)

//연습문제 5
