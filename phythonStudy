// 파이썬 학교 공부 2일차 
집그리기 응용 p64

import turtle
size=int(input("집 사이즈 얼마로 할까요?"))
t=turtle.Turtle()
t.shape("turtle")
length=0

while length<4:
    t.forward(size)
    t.left(90)
    length+=1

t.goto(0,100)
length=0
while length<3:
    t.forward(size)
    t.left(120)
    length+=1

    //로봇기자 만들기
