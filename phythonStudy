result=3.14*(num1*num1)
print(num1,"의 원넓이결과:",result)

//연습문제 4
radius=50
import turtle
t=turtle.Turtle()
t.shape("turtle")

t.circle(radius)
t.up()
t.goto(100,0)
t.down()
t.circle(radius+20)
t.up()
t.goto(200,0)
t.down()
t.circle(radius+40)

