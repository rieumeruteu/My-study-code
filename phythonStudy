t=turtle.Turtle()
t.shape("turtle")
length=0
while length<6:
    t.fd(100)
    t.left(60)
    length+=1


// 예제 응용 코드: 문제점 빨간색만 출력됨 
import turtle
colors = ["red","purple","green","yellow","orange"]
t=turtle.Turtle()

turtle.bgcolor("black")
t.speed(0)
t.width(3)
length=10

while length<500:
    t.forward(length)
    t.pencolor(colors[length%5])
    t.right(89)
    length+=5


//파이썬 정육각형,원그리기 실습응용코드
 import turtle
t=turtle.Turtle()
t.shape("turtle")
length=0

while length<6:
    t.fd(100)
    t.lt(60)
    length+=1
t.circle(100)

