//연습문제 7
side=100
angle=90
import turtle
t=turtle.Turtle()
t.shape("turtle")
t.width(5)
length=0

while length<4:
    t.forward(side)
    t.left(angle)
    length+=1
t.forward(side)

while length>=0:
    t.forward(side)
    t.left(angle)
    length-=1
t.goto(200,100)

while length<4:
    t.forward(side)
    t.left(angle)
    length+=1
t.goto(0,200)
t.left(angle)
t.forward(side)
