print("리스트 숫자들의 합%d"%sum)

연습문제7
import turtle
t=turtle.Turtle()
color_list=[]
color1=input("원하는 색 입력:")
color2=input("원하는 색 입력:")
color3=input("원하는 색 입력:")
color_list.append(color1)
color_list.append(color2)
color_list.append(color3)

t.fillcolor(color_list[0])
t.begin_fill()
t.circle(50)
t.end_fill()

t.up()
t.goto(100,0)
t.down()

t.fillcolor(color_list[1])
t.begin_fill()
t.circle(50)
t.end_fill()

t.up()
t.goto(200,0)
t.down()

t.fillcolor(color_list[2])
t.begin_fill()
t.circle(50)
t.end_fill()

t.up()
t.goto(300,0)
t.down()

연습문제8
import turtle
t=turtle.Turtle()

x1=int(input("x1="))
y1=int(input("y1="))

x2=int(input("x2="))
y2=int(input("y2="))

x3=int(input("x3="))
y3=int(input("y3="))

t.goto(x1,y1)
t.goto(x2,y2)
t.goto(x3,y3)