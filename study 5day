예제1
line='='*50
print(line)
name=input("이름이 어떻게?")
print("반갑습니다",name,"씨")

print("당신의 이름길이는"+str(len(name))+"이군요")
age=int(input("나이는 어떻게 되는지?"))

print("내년이면"+str(age+1)+"살이 되겠군요")

예제2
import time
t=time.time()
now=int(1970+(t//(365*3600*24)))
print("올해는",now,"년입니다")
year=int(input("몇살?"))
future=int(2050-now+year)
print("2050년에는"+str(future)+"살이군요")

예제3
n=0
list1=[]
while n<5:
    name=input("이름을 넣으시오")
    list1.append(name)
    n+=1
print(list1)

예제4
import turtle
t=turtle.Turtle()
color_list=["red","green","blue"]
t.fillcolor(color_list[0])
t.begin_fill()
t.circle(100)
t.end_fill()

t.fd(100)

t.fillcolor(color_list[1])
t.begin_fill()
t.circle(100)
t.end_fill()

t.fd(100)
t.fillcolor(color_list[2])
t.begin_fill()
t.circle(100)
t.end_fill()

