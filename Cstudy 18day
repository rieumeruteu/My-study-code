//에노드
const byte numeral[10]={
  B00111111,//0
  B00000110,//100000110
  B01011011,//201011011
  B01001111,//301001111
  B01100110,//401100110
  B01101101,//501101101
  B01111101,//601111101
  B00100111,//700100111
  B01111111,//801111111
  B01101111,//901101111
};

const int secPin[8]={8,2,3,4,5,6,7};
const int jodo=A0;
const int led=9;
const int echo=10;
const int trig=11;
int brightness;

//부저 12핀
int jodoValue;

void setup() {
 Serial.begin(9600);
 for(int i=0;i<8;i++)
 {
  pinMode(secPin[i],OUTPUT);
 }

 pinMode(trig,OUTPUT);
 pinMode(echo,INPUT);
 pinMode(led,OUTPUT);
}

void loop() {
 jodoValue=analogRead(jodo);
  digitalWrite(trig, LOW);
  delayMicroseconds(2);
  digitalWrite(trig, HIGH);
  delayMicroseconds(10);         
  digitalWrite(trig, LOW);
  
  
  double duration = pulseIn(echo, HIGH);
  double distance = (duration*340)/2/10000;

  brightness=map(jodoValue,0,1023,0,1000);


Serial.println(distance);
Serial.println(jodoValue);

  if((0<=distance<=10) && jodoValue<700)
  {
    ShowDigit(0);
    
  }

   else if((10<=distance<=20) && jodoValue<700)
  {
    ShowDigit(1);
    
  }

   else if((20<=distance<=30) && jodoValue<700)
  {
    ShowDigit(2);
    
  }

   else if((30<=distance) && jodoValue<700)
  {
    digitalWrite(led,HIGH);
    
  }

//////////////////////////////////////

   if((0<=distance<=10) && jodoValue>=700)
  {
    ShowDigit(9);
    
  }

  else if((10<=distance<=20) && jodoValue>=700)
  {
    ShowDigit(8);
    
  }

   else if((20<=distance<=30) && jodoValue>=700)
  {
    ShowDigit(7);
    
  }

   else if((30<=distance) && jodoValue>=700)
  {
    digitalWrite(led,LOW);
    tone(12,100,100);
    
  }

 delay(1000);
}




void ShowDigit(int number){
  boolean isBitSet;
  for(int segment=0;segment<=9;segment++)//점까지 포함한 핀 개수로 하자
  {
    if(number<0||number>9)
    {
      isBitSet=0;
    }
    else
    {
      isBitSet=bitRead(numeral[number],segment);//
    }
   digitalWrite(secPin[segment],isBitSet);
  }
}

